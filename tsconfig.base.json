{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,

		"moduleResolution": "Node",
		"module": "ESNext",
		"target": "ESNext",
		"lib": [ "ESNext" ],

		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true
	}
}
