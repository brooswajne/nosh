{
	"compilerOptions": {
		"moduleResolution": "Node",
		"module": "ESNext",
		"target": "ESNext",
		"lib": [ "ESNext", "DOM" ],

		"noEmit": true,
		"allowJs": true,
		"checkJs": true,

		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [ "**/*.js" ],
	"exclude": [ "node_modules", "dist" ]
}
